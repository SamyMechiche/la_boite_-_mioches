{% extends 'base.html.twig' %}

{% block title %}Activity index{% endblock %}

{% block body %}
    <h1>Activity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Beginning_hour</th>
                <th>Ending_hour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.name }}</td>
                <td>{{ activity.description }}</td>
                <td>{{ activity.beginningHour ? activity.beginningHour|date('H:i:s') : '' }}</td>
                <td>{{ activity.endingHour ? activity.endingHour|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_activity_crud_show', {'id': activity.id}) }}">show</a>
                    <a href="{{ path('app_activity_crud_edit', {'id': activity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_crud_new') }}">Create new</a>
{% endblock %}
