{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Beginning_hour</th>
                <td>{{ activity.beginningHour ? activity.beginningHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ending_hour</th>
                <td>{{ activity.endingHour ? activity.endingHour|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activity_crud_index') }}">back to list</a>

    <a href="{{ path('app_activity_crud_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity_crud/_delete_form.html.twig') }}
{% endblock %}
