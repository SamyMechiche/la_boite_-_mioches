    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>Fname</th>
                <td>{{ child.fname }}</td>
            </tr>
            <tr>
                <th>Lname</th>
